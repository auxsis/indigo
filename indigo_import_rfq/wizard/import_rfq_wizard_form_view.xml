<odoo>
    <data>
        <record model="ir.ui.view" id="import_rfq_wizard_form_view">
            <field name="name">import_rfq_wizard_form_view</field>
            <field name="model">import.rfq.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Form">
                    <group>
                        <field name="xls_file"/>
                    </group>
                     <footer>
                        <button name="import_rfq" type="object" string="Import" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_import_rfq" model="ir.actions.act_window">
            <field name="name">Import RFQ</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">import.rfq.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="action_wizard_import_rfq" id="menu_wizard_import_rfq" parent="purchase.menu_purchase_config"/>
    </data>
</odoo>