<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_purchase_tree_inherit_purchase_import" model="ir.ui.view">
        <field name="name">view.purchase.tree.inherit.purchase.import</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="js_class">purchase_import_tree</attribute>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_form_inherit_purchase_import" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.purchase.import</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='taxes_id']" position="after">
                <field name="ctns"/>
                <field name="tgw"/>
                <field name="tnw"/>
                <field name="total_volume"/>
                <field name="pcs_ctn"/>
                <field name="length"/>
                <field name="weight"/>
                <field name="height"/>
                <field name="gw"/>
                <field name="nw"/>
            </xpath>
        </field>
    </record>
</odoo>
